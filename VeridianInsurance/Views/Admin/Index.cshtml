        @(viewModel.TopOfferConsultant.Count > 2 ? (viewModel.TopOfferConsultant[2]?.Vehicle ?? 0) : 0),
        @(viewModel.TopOfferConsultant.Count > 2 ? (viewModel.TopOfferConsultant[2]?.ND ?? 0) : 0)
