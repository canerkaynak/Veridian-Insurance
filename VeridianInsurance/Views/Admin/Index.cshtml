    </div>
    <div class="last-items-container">
        <div class="last-offers">
            <div class="last-items-container-header">
                <h2>Top consultant by policies</h2>
                <hr />
            </div>
            <div class="tableDiv">
                <table id="offerListTable">
                    <thead>
                        <tr>
                            <td>Full Name</td>
                            <td>Username</td>
                            <td>Gender</td>
                            <td>City</td>
                            <td>Town</td>
                            <td>Email</td>
                            <td>Date of Birth</td>
                            <td>Health Policy</td>
                            <td>Vehicle Policy</td>
                            <td>ND Policy</td>
                            <td>Total Policy</td>
                            <td>Delete</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var consultant in viewModel.AllConsultants)
                        {
                            if(String.Equals(consultant.Type, "A"))
                            {
                                <tr>
                                    <td>@{
                                            var FullName = consultant.Name + " " + consultant.Surname;
                                        }
                                        @FullName
                                    </td>
                                    <td>@consultant.UserName</td>
                                    <td>@consultant.Gender</td>
                                    <td>@consultant.City</td>
                                    <td>@consultant.Town</td>
                                    <td>@consultant.Email</td>
                                    <td>@Convert.ToDateTime(consultant.DateOfBirth).ToString("dd/MM/yyyy")</td>
                                    <td>@consultant.HealthPolicy</td>
                                    <td>@consultant.VehiclePolicy</td>
                                    <td>@consultant.NDPolicy</td>
                                    <td>
                                        @(consultant.TotalPolicy)
                                    </td>
                                    <td>
                                        <form asp-action="passivateConsultant" method="post" onsubmit="confirmDelete(event);">
                                            <input type="hidden" name="Username" value="@consultant.UserName" />
                                            <button type="submit" class="rounded-pill btn btn-lg btn-outline-danger btn-sm">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="~/js/confirmation.js"></script>
    <script>
        function createPieChart(canvasId, labels, data, backgroundColors, borderColors) {
            const ctx = document.getElementById(canvasId).getContext('2d');
            new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: labels,
                    datasets: [{
                        data: data,
                        backgroundColor: backgroundColors,
                        borderColor: borderColors,
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'right',
                            labels: {
                                boxWidth: 20,
                                padding: 10
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function (tooltipItem) {
                                    return tooltipItem.label + ': ' + tooltipItem.raw + '%';
                                }
                            }
                        }
                    }
                }
            });
        }


        createPieChart(
            'pie-chart-offer1-id',
            ['H', 'V', 'N'],
            [
        @(viewModel.TopOfferConsultant.Count > 0 ? (viewModel.TopOfferConsultant[0]?.Health ?? 0) : 0),
        @(viewModel.TopOfferConsultant.Count > 0 ? (viewModel.TopOfferConsultant[0]?.Vehicle ?? 0) : 0),
        @(viewModel.TopOfferConsultant.Count > 0 ? (viewModel.TopOfferConsultant[0]?.ND ?? 0) : 0)
                ],
            ['#FF6384', '#36A2EB', '#FFCE56'],
            ['#FF6384', '#36A2EB', '#FFCE56']
        );

        createPieChart(
            'pie-chart-offer2-id',
            ['H', 'V', 'N'],
            [
        @(viewModel.TopOfferConsultant.Count > 1 ? (viewModel.TopOfferConsultant[1]?.Health ?? 0) : 0),
        @(viewModel.TopOfferConsultant.Count > 1 ? (viewModel.TopOfferConsultant[1]?.Vehicle ?? 0) : 0),
        @(viewModel.TopOfferConsultant.Count > 1 ? (viewModel.TopOfferConsultant[1]?.ND ?? 0) : 0)
