            ['#FF6384', '#36A2EB', '#FFCE56']
        );

        createPieChart(
            'pie-chart-policy2-id',
            ['H', 'V', 'N'],
            [
        @(viewModel.TopPolicyConsultant.Count > 1 ? (viewModel.TopPolicyConsultant[1]?.Health ?? 0) : 0),
        @(viewModel.TopPolicyConsultant.Count > 1 ? (viewModel.TopPolicyConsultant[1]?.Vehicle ?? 0) : 0),
        @(viewModel.TopPolicyConsultant.Count > 1 ? (viewModel.TopPolicyConsultant[1]?.ND ?? 0) : 0)
                ],
            ['#FF6384', '#36A2EB', '#FFCE56'],
            ['#FF6384', '#36A2EB', '#FFCE56']
        );

        createPieChart(
            'pie-chart-policy3-id',
            ['H', 'V', 'N'],
